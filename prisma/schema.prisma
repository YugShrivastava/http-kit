// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id    String @id
  token String @unique @default(nanoid(21))
  apis  Api[]
  bins  Bin[]
}

model Api {
  id     String @id @default(cuid())
  user   User   @relation(fields: [userId], references: [id])
  userId String
  apiId  String @unique @default(nanoid(6))
  data   String
}

model Bin {
  id     String       @id @default(cuid())
  user   User         @relation(fields: [userId], references: [id])
  userId String
  binId  String       @unique @default(nanoid(6))
  logs   RequestLog[]
}

model RequestLog {
  id        String    @id @default(cuid())
  bin       Bin       @relation(fields: [binId], references: [binId], onDelete: Cascade)
  binId     String
  method    String
  timestamp DateTime  @default(now())
  headers   String
  body      String
  query     String
}
